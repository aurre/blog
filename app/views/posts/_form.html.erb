<h1><%= title %></h1>

<%= form_with model: @post, data: { remote: false } do |post|  %>
  <div class="form-group">
    <%= post.label :title %>
    <%= post.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= post.label :content %>
    <%= post.text_area :content, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= post.submit "Save Post", class: 'btn btn-primary' %>
  </div>
<% end %>